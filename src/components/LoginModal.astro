// Definición del color de acento
const accentColor = "#E91E63"; 
---

<script>
    // -------------------------------------------------------------
    // GESTIÓN DEL MODAL Y EL CAMBIO DE VISTAS (LOGIN vs. REGISTER)
    // -------------------------------------------------------------
    
    document.addEventListener('DOMContentLoaded', () => {
        const modalOverlay = document.getElementById('login-modal-overlay');
        const closeButton = document.getElementById('close-modal-btn');
        
        // Contenedores de las dos vistas
        const loginView = document.getElementById('login-view');
        const registerView = document.getElementById('register-view');

        // Botones de cambio de estado
        // Los botones se capturan por las clases open-register-view y open-login-view
        const openRegisterBtns = document.querySelectorAll('.open-register-view');
        const openLoginBtns = document.querySelectorAll('.open-login-view');
        
        // Obtenemos la referencia al título una sola vez al inicio del DOMContent
        const modalTitle = document.getElementById('modal-title'); 


        // Función para manejar el estado de las vistas
        // CORRECCIÓN: Definimos el tipo del parámetro 'islogin' como boolean para evitar el error de TypeScript.
        const setView = (isLogin: boolean) => {
            
            if (modalTitle) {
                if (isLogin) {
                    modalTitle.textContent = 'Iniciar Sesión'; 
                } else {
                    modalTitle.textContent = 'Crear Cuenta'; 
                }
            }
            
            // Lógica para mostrar/ocultar las vistas
            // Usamos la comprobación opcional (?.) ya que estos elementos pueden ser null
            if (isLogin) {
                loginView?.classList.remove('hidden');
                registerView?.classList.add('hidden');
            } else {
                loginView?.classList.add('hidden');
                registerView?.classList.remove('hidden');
            }
        };

        // 1. Inicializar la vista en Login
        setView(true);

        // 2. Eventos para cambiar a la vista de Registro
        openRegisterBtns.forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.preventDefault();
                setView(false); // Mostrar vista de registro
            });
        });

        // 3. Eventos para volver a la vista de Inicio de Sesión
        openLoginBtns.forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.preventDefault();
                setView(true); // Mostrar vista de login
            });
        });


        // 4. Lógica de cierre del modal
        if (modalOverlay && closeButton) {
            
            // Cerrar al hacer clic en la X
            closeButton.addEventListener('click', () => {
                modalOverlay.classList.remove('open');
                setView(true); // Siempre vuelve a la vista de Login al cerrar
            });

            // Cerrar al hacer clic FUERA del modal
            modalOverlay.addEventListener('click', (e) => {
                if (e.target === modalOverlay) {
                    modalOverlay.classList.remove('open');
                    setView(true); // Siempre vuelve a la vista de Login al cerrar
                }
            });

            // Cerrar al presionar la tecla ESC
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && modalOverlay.classList.contains('open')) {
                    modalOverlay.classList.remove('open');
                    setView(true); // Siempre vuelve a la vista de Login al cerrar
                }
            });
        }
    });
</script>

<!-- OVERLAY: El fondo oscuro que cubre toda la pantalla -->
<div id="login-modal-overlay" class="modal-overlay">
    
    <!-- MODAL: La tarjeta de inicio de sesión -->
    <div id="login-modal" class="modal-content">
        <!-- Encabezado y botón de cierre -->
        <div class="modal-header">
            <!-- Título dinámico que cambia con el estado -->
            <h2 id="modal-title" class="title">Iniciar Sesión</h2> 
            <button id="close-modal-btn" class="close-btn" aria-label="Cerrar">
                <!-- Icono SVG de una X -->
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" width="24" height="24">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>

        <!-- ============================================== -->
        <!-- VISTA 1: FORMULARIO DE INICIO DE SESIÓN (LOGIN) -->
        <!-- ============================================== -->
        <div id="login-view">
            <form class="login-form">
                <div class="input-group">
                    <label for="login-email">Correo Electrónico</label>
                    <input type="email" id="login-email" name="email" placeholder="Ingrese su correo" required>
                </div>
                
                <div class="input-group">
                    <label for="login-password">Contraseña</label>
                    <input type="password" id="login-password" name="password" placeholder="*********" required>
                </div>
                
                <!-- ENLACE OLVIDASTE CONTRASEÑA -->
                <div class="reset-link-container">
                    <a href="#" class="reset-link">¿Olvidaste tu contraseña?</a>
                </div>

                <!-- BOTÓN PRINCIPAL DE INGRESAR -->
                <button type="submit" class="submit-btn" style={`background: linear-gradient(83.21deg, #FF3366 0%, ${accentColor} 100%);`}>Ingresar</button>

                <!-- Sección de registro (Pie de página) -->
                <!-- Cambiamos el contenido para que sea un botón secundario con texto -->
                <div class="register-footer single-button-footer"> 
                    <a href="#" class="open-register-view secondary-action-btn">¿No tienes cuenta? </a>
                </div>
            </form>
        </div>


        <!-- ============================================= -->
        <!-- VISTA 2: FORMULARIO DE CREAR CUENTA (REGISTER) -->
        <!-- Le añadimos la clase 'hidden' por defecto en el HTML -->
        <!-- ============================================= -->
        <div id="register-view" class="hidden"> 
            <form class="register-form">
                <div class="input-group">
                    <label for="register-name">Nombre de Usuario</label>
                    <input type="text" id="register-name" name="name" placeholder="Ingrese su nombre" required>
                </div>

                <div class="input-group">
                    <label for="register-email">Correo Electrónico</label>
                    <input type="email" id="register-email" name="email" placeholder="Ingrese su correo" required>
                </div>
                
                <div class="input-group">
                    <label for="register-password">Contraseña</label>
                    <input type="password" id="register-password" name="password" placeholder="*********" required>
                </div>

                <div class="input-group">
                    <label for="register-phone">Número Telefónico</label>
                    <input type="tel" id="register-phone" name="phone" placeholder="Ingrese su telefono" required>
                </div>
                
                <!-- BOTÓN PRINCIPAL DE CREAR CUENTA -->
                <button type="submit" class="submit-btn" style={`background: linear-gradient(83.21deg, #FF3366 0%, ${accentColor} 100%);`}>Crear Cuenta</button>

                <!-- Pie de página para volver al login -->
                <div class="register-footer single-button-footer">
                    <a href="#" class="open-login-view secondary-action-btn">¿Ya tienes cuenta? </a>
                </div>
            </form>
        </div>

    </div>
</div>


<style define:vars={{ accentColor }}>
    /* Variables de Estilo */
    :root {
        --accent-color: var(--accentColor); /* #E91E63 */
        --dark-bg: #111827;
        --modal-bg: #ffffff;
        --border-color: #e5e7eb;
        --text-muted: #6b7280;
        /* Nuevo color para botones secundarios */
        --secondary-btn-bg: #f5f5f5; 
        --secondary-btn-hover-bg: #ebebeb;
    }

    /* Clase para ocultar elementos (usada por JS) */
    .hidden {
        display: none !important;
    }

    /* -------------------------------------- */
    /* 1. OVERLAY (Fondo Oscuro y Posicionamiento) */
    /* -------------------------------------- */

    .modal-overlay {
        position: fixed; 
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.75); 
        display: flex;
        justify-content: center; 
        align-items: center; 
        z-index: 100; 

        /* OCULTAR POR DEFECTO */
        visibility: hidden;
        opacity: 0;
        transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    .modal-overlay.open {
        visibility: visible; 
        opacity: 1; 
    }

    /* -------------------------------------- */
    /* 2. MODAL CONTENT (La Tarjeta Blanca) */
    /* -------------------------------------- */

    .modal-content {
        background-color: var(--modal-bg);
        color: var(--dark-bg);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        max-width: 450px;
        width: 90%; 
        
        /* Animación de entrada */
        transform: translateY(-50px);
        transition: transform 0.3s ease;
        
        /* Aseguramos que solo el contenido activo ocupe espacio */
        overflow: hidden; 
    }
    
    .modal-overlay.open .modal-content {
        transform: translateY(0); 
    }

    /* -------------------------------------- */
    /* 3. Estilos del Formulario */
    /* -------------------------------------- */

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .title {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
        color: var(--dark-bg);
    }

    .close-btn {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        color: var(--text-muted); 
        transition: color 0.2s;
    }

    .close-btn:hover {
        color: var(--accent-color);
    }

    .input-group {
        margin-bottom: 1rem;
    }

    .input-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }

    .input-group input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border-color);
        border-radius: 6px;
        font-size: 1rem;
        box-sizing: border-box;
        transition: border-color 0.2s, box-shadow 0.2s;
    }
    
    .input-group input:focus {
        outline: none;
        border-color: var(--accent-color);
        box-shadow: 0 0 0 3px rgba(233, 30, 99, 0.2);
    }

    /* Contenedor del enlace de Olvidaste Contraseña para alineación a la derecha */
    .reset-link-container {
        text-align: right;
        /* Reducimos el margen superior e inferior para que el enlace esté más cerca del input */
        margin-top: -0.25rem; 
        margin-bottom: 1.5rem; 
    }
    
    .reset-link {
        color: var(--text-muted);
        font-size: 0.85rem;
        text-decoration: none;
        transition: color 0.2s;
    }

    .reset-link:hover {
        color: var(--accent-color);
        text-decoration: underline;
    }
    
    /* Botón PRINCIPAL de INGRESAR / CREAR CUENTA */
    .submit-btn {
        width: 100%;
        padding: 0.75rem;
        /* Aumentamos el margen inferior para separarlo del pie de página */
        margin-bottom: 2rem; 
        border: none;
        border-radius: 9999px;
        font-weight: 700;
        color: white;
        cursor: pointer;
        transition: opacity 0.2s, transform 0.2s;
        /* Aseguramos que la sombra y el degradado sean visibles */
        box-shadow: 0 6px 12px rgba(233, 30, 99, 0.4); 
    }

    .submit-btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }

    /* -------------------------------------- */
    /* 4. Pie de Página de Registro (Simplificado) */
    /* -------------------------------------- */
    
    .register-footer {
        text-align: center;
        padding-top: 1.5rem; 
        border-top: 1px solid var(--border-color);
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-top: 0; 
    }
    
    /* Estilos específicos para la versión simplificada */
    .register-footer.simple-footer {
        /* Se quita, ya que usaremos single-button-footer */
    }
    
    .register-footer.single-button-footer {
        /* Asegura que el footer solo contenga el botón/enlace, se vea centrado y espaciado */
        padding-top: 1rem;
        margin-top: -1rem; /* Acercamos el footer al botón de ingresar */
        border-top: none; /* Quitamos la línea para un look más limpio */
    }
    
    /* Estilo del nuevo botón secundario */
    .secondary-action-btn {
        display: block; /* Ocupa todo el ancho */
        width: 100%;
        padding: 0.75rem 1rem; 
        border: 1px solid var(--border-color); /* Borde sutil */
        border-radius: 9999px; 
        font-size: 0.95rem; 
        font-weight: 600;
        text-decoration: none;
        cursor: pointer; 
        
        color: var(--dark-bg);
        background-color: var(--secondary-btn-bg); /* Gris claro */
        
        transition: background-color 0.2s, box-shadow 0.2s;
    }
    
    .secondary-action-btn:hover {
        background-color: var(--secondary-btn-hover-bg); 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Una pequeña sombra al pasar el ratón */
    }


    .register-prompt {
        font-size: 0.9rem;
        color: var(--text-muted);
        margin: 0;
    }
    
    .register-link-text {
        color: var(--accent-color); 
        font-weight: 600;
        text-decoration: none;
        cursor: pointer; 
    }

    .register-link-text:hover {
        text-decoration: underline;
    }

    /* Eliminamos las reglas del botón secundario ya que fue removido del HTML */
</style>