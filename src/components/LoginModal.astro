<!-- Este script maneja la apertura y cierre del modal -->
<script>
document.addEventListener('DOMContentLoaded', () => {
    // Obtenemos los elementos
    const modalOverlay = document.getElementById('login-modal-overlay');
    const closeButton = document.getElementById('close-modal-btn');
    const modal = document.getElementById('login-modal');
    const openButton = document.getElementById('open-login-btn'); // üëà nuevo

    // Verificamos que todos existan
    if (modalOverlay && closeButton && modal && openButton) {

        // üëâ 1. Abrir modal al hacer clic en el bot√≥n "Iniciar Sesi√≥n"
        openButton.addEventListener('click', () => {
            modalOverlay.classList.add('open');
        });

        // üëâ 2. Cerrar al hacer clic en la X
        closeButton.addEventListener('click', () => {
            modalOverlay.classList.remove('open');
        });

        // üëâ 3. Cerrar al hacer clic fuera del modal (fondo oscuro)
        modalOverlay.addEventListener('click', (e) => {
            if (e.target === modalOverlay) {
                modalOverlay.classList.remove('open');
            }
        });

        // üëâ 4. Cerrar con la tecla ESC
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                modalOverlay.classList.remove('open');
            }
        });
    }
});
</script>

