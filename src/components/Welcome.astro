---
// Definición del color de acento para los botones (Magenta/Rosa fuerte)
const accentColor = "#E91E63"; 
---

<!-- Este script se ejecuta en el navegador (client-side) para manejar la interacción -->
<script>
    // Se espera a que el documento esté completamente cargado
    document.addEventListener('DOMContentLoaded', () => {
        // Obtenemos el botón grande de "Agendar tu Cita Ahora"
        const citaButton = document.getElementById('agendar-cita-btn');
        // Obtenemos el modal de inicio de sesión (que se definirá en el Layout)
        const loginModal = document.getElementById('login-modal-overlay');

        if (citaButton && loginModal) {
            // Cuando se hace clic en el botón...
            citaButton.addEventListener('click', (e) => {
                e.preventDefault(); // Evita que el enlace salte a otra página
                loginModal.classList.add('open'); // Añade la clase 'open' para mostrar el modal
            });
        }
    });
</script>

<!-- Contenedor principal centrado -->
<main class="welcome-container">
    <div class="content">
        <!-- Título principal: se envuelve "Piel" en un <span> para aplicar color -->
        <h1 class="title">Arte que Habita en tu <span class="highlight">Piel</span></h1>
        
        <!-- Descripción del estudio -->
        <p class="description">
            En Cuervo Rosa Studio, transformamos ideas en arte corporal. Fusionamos diseño, 
            técnica y seguridad para crear piezas únicas que cuentan tu historia.
        </p>
        
        <!-- Contenedor de botones -->
        <div class="buttons-row">
            <!-- Botón principal (Rosa) - Se le asigna un ID para el script -->
            <a href="#" id="agendar-cita-btn" class="button-cita" style={`background: linear-gradient(83.21deg, #FF3366 0%, ${accentColor} 100%);`}>
                Agenda tu Cita Ahora
            </a>
            
            <!-- Botón secundario (Blanco) -->
            <a href="#" class="button-portfolio">
                Ver Portafolio
            </a>
        </div>
    </div>
</main>

<style define:vars={{ accentColor }}>
    /* Estilos para el componente Welcome (centrado en la pantalla) */
    .welcome-container {
        display: flex;
        justify-content: center; /* Centrado horizontal */
        align-items: center; /* Centrado vertical */
        min-height: calc(100vh - 4.5rem); /* Altura de la ventana menos la altura del navbar */
        text-align: center;
        padding: 2rem 1rem;
    }

    .content {
        max-width: 700px;
        width: 100%;
    }

    .title {
        font-size: clamp(2.5rem, 6vw, 4rem); /* Título responsivo */
        font-weight: 800;
        margin-bottom: 1rem;
        color: black;
    }

    /* CLASE CORREGIDA: Hacemos el selector más específico para evitar que el 'color: black' del padre lo sobrescriba */
    .title .highlight { 
        color: var(--accentColor); /* Utiliza el color rosa fuerte definido en el frontmatter */
    }

    .description {
        font-size: clamp(1rem, 2vw, 1.25rem);
        color: rgba(51, 51, 51, 0.85);
        margin-bottom: 2.5rem;
        line-height: 1.6;
    }

    .buttons-row {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap; /* Permite que los botones se envuelvan en pantallas muy pequeñas */
    }

    .button-cita,
    .button-portfolio {
        text-decoration: none;
        padding: 0.8rem 1.8rem;
        border-radius: 9999px;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
    
    .button-cita {
        color: white;
    }

    .button-portfolio {
        color: #111827;
        background-color: white;
    }

    .button-cita:hover,
    .button-portfolio:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
    }
</style>